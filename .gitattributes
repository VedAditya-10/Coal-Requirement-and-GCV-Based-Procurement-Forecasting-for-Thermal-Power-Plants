# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Model files (large text files)
*.txt text eol=lf

# Binary files
*.pkl binary
*.csv binary
*.pdf binary
*.jpg binary
*.png binary
